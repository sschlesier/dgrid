{
  "name": "dgrid-v2",
  "version": "2.0.0",
  "description": "Modern MongoDB GUI with AI-native development",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "vite",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "tsc -p src/backend",
    "build:frontend": "vite build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit && tsc --noEmit -p src/backend && tsc --noEmit -p src/frontend",
    "lint": "eslint . --ext .ts,.js,.svelte",
    "lint:fix": "eslint . --ext .ts,.js,.svelte --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "pnpm type-check && pnpm lint && pnpm test run && pnpm build",
    "prepare": "husky",
    "start": "node dist/backend/server.js"
  },
  "keywords": [
    "mongodb",
    "gui",
    "fastify",
    "svelte"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.28.1",
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.2.0",
    "@napi-rs/keyring": "^1.2.0",
    "@replit/codemirror-vim": "^6.3.0",
    "chokidar": "^4.0.3",
    "codemirror": "^6.0.2",
    "fastify": "^5.7.1",
    "mongodb": "^6.21.0",
    "pino": "^9.14.0",
    "svelte": "^5.48.1",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@eslint/js": "^9.39.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.1.0",
    "happy-dom": "^15.11.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "mongodb-memory-server": "^10.4.3",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte-check": "^4.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
